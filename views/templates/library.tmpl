<% skin myskin %>
<% view library uses content::Library extends master %>
<% template title() %><%= title %> :: Library<% end %>

<% template library_content() %>
    <% foreach item in media %>
    <% item %>
        <% if item.isCollection %>
        <div class="media-item" id='<%= item.id %>'>
            <a href='<% url "collection" using item.id %>'><img class="hover-shadow" src='/covers/<%= item.cover %>' alt='<%= item.title %>' onclick=''></a>
            <div class="progress"><div class="progress-bar" style='width: <%= item.progress %>%;'></div></div>
            <h2><%= item.title %></h2>
            <p><%= item.volumes %></p>
        </div>
        <% else %>
        <div class="media-item" id='<%= item.id %>'>
            <a href='<% url "read" %>?id=<%= item.id %>'><img class="hover-shadow" src='/covers/<%= item.cover %>' alt='<%= item.title %>'></a>
            <div class="progress"><div class="progress-bar" style='width: <%= item.progress %>%;'></div></div>
            <h2><%= item.title %></h2>
            <p><%= item.volumes %></p>
        </div>
        <% end %>
    <% end %>
    <% end %>

    <div class="media-item">
        <img class="hover-shadow" src="/covers/vegabond-v01.jpg" alt="BookFileName" onclick="openRead();loadInit(0)">
        <div class="progress"><div class="progress-bar" style="width: 0%;"></div></div>
        <h2>The Beginners Guide to Bicycle Commuting</h2>
    </div>
    <div class="media-item">
        <img class="hover-shadow" src="/covers/vegabond-v01.jpg" alt="BookFileName" onclick="">
        <div class="progress"><div class="progress-bar" style="width: 0%;"></div></div>
        <h2>Bash Command Line and Shell Scripts Pocket Primer</h2>
    </div>
    <div class="media-item">
        <img class="hover-shadow" src="/covers/vegabond-v01.jpg" alt="BookFileName" onclick="">
        <div class="progress"><div class="progress-bar" style="width: 0%;"></div></div>
        <h2>Transformers Historyia</h2>
    </div>
    <div class="media-item">
        <img class="hover-shadow" src="/covers/vegabond-v01.jpg" alt="Vagabond" onclick="">
        <div class="progress"><div class="progress-bar" style="width: 83%;"></div></div>
        <h2>Vegabond</h2>
        <p>Volume 1</p>
    </div>
<% end %>

<% template page_content() %>
    <nav class="library-nav">
        <a href="#view-select">View: All</a>
        <div style="flex-grow: 2;"></div>
        <a href='<% url "/upnext" %>'>Up Next</a>
        <a href='<% url "/library" %>'>Library</a>
        <div style="flex-grow: 2.5;"></div>
    </nav>
    <div class="library-content"><% include library_content() %></div>
<% end template %>

<% end view %>
<% end skin %>