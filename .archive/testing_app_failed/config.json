{  
    "WebSite" : {
        "root" : ""
    },
    "service" : {  
        "api" : "http",  
        "port" : 8080  
    },
    "http" : {  
        "script" : "/mb.fcgi",  
        "rewrite" : [  
            { "regex" : "/resources(/.+)", "pattern" : "$1" },
            { "regex" : "/covers(/.+)", "pattern" : "$0" },
            { "regex" : "/media(/.+)", "pattern" : "$0" },
            { "regex" : ".*" , "pattern" : "/mb.fcgi$0" }  
        ]  
    },
    "file_server" : {
        "enable" : true,
        "listing" : false,
        "document_root" : "./resources",
        "alias" : [
            { "url" : "/covers", "path" : "./testing/covers" },
            { "url" : "/media", "path" : "./testing/media"}
        ]
    } 
}
