{  
    "app" : {
        "page_chunk_size" : {
            "forward" : 5,
            "backward" : 3
        },
        "paths" : {
            "db" : "./testing/database/test.db",
            "media" : "./testing",
            "tmp" : "./testing/tmp/pages/",
            "import" : "",
            "covers" : "./testing/covers/"
        }
    },
    "service" : {  
        "api" : "http",  
        "port" : 8080  
    },
    "http" : {  
        "script" : "/mb.fcgi",  
        "rewrite" : [  
            { "regex" : "/resources(/.+)", "pattern" : "$1" },
            { "regex" : "/covers(/.+)", "pattern" : "$0" },
            { "regex" : "/pages(/.+)", "pattern" : "$0" },
            { "regex" : ".*" , "pattern" : "/mb.fcgi$0" }  
        ]  
    },
    "file_server" : {
        "enable" : true,
        "listing" : true,
        "document_root" : "./resources",
        "alias" : [
            { "url" : "/covers", "path" : "./testing/covers/" },
            { "url" : "/pages", "path" : "./testing/tmp/pages/" }
        ]
    } 
}
